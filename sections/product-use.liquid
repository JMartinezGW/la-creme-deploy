<div class="page-width">
  <div class="product-use">
    <div class="grid">
      {% if product.metafields.product-use.product-use-video-url %}
        <div class="grid__item medium-up--one-half">
          {% assign tab_video_url = product.metafields.product-use.product-use-video-url | split: "v=" %}
          {% if tab_video_url[1] %}
          <iframe width="600" height="360" src="https://www.youtube.com/embed/{{ tab_video_url[1] }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          {% endif %}
        </div>
      {% elsif product.metafields.product-use.product-use-image != blank %}
      	<div class="grid__item medium-up--one-half">
          <img src="{{ product.metafields.product-use.product-use-image }}" />
      	</div>
      {% endif %}
      {% if section.settings.step_1 != blank and product.metafields.product-use.product-use-step-1 != blank %}
        <div class="grid__item medium-up--one-half">
          <header class="section-header">
            <h3 class="section-header__title">
              {{ section.settings.title }}
            </h3>
          </header>
          <ul class="no-bullets">
            {% if section.settings.step_1 != blank and product.metafields.product-use.product-use-step-1 != blank %}
            <li>
              <div class="grid">
                <div class="grid__item">
                  <span>{{ section.settings.step_1 }}</span>
                </div>
                <div class="grid__item">
                  {{ product.metafields.product-use.product-use-step-1 }}
                </div>
              </div>
            </li>
            {% endif %}
            {% if section.settings.step_2 != blank and product.metafields.product-use.product-use-step-2 != blank %}
            <li>
              <div class="grid">
                <div class="grid__item">
                  <span>{{ section.settings.step_2 }}</span>
                </div>
                <div class="grid__item">
                  {{ product.metafields.product-use.product-use-step-2 }}
                </div>
              </div>
            </li>
            {% endif %}
            {% if section.settings.step_3 != blank and product.metafields.product-use.product-use-step-3 != blank %}
            <li>
              <div class="grid">
                <div class="grid__item">
                  <span>{{ section.settings.step_3 }}</span>
                </div>
                <div class="grid__item">
                  {{ product.metafields.product-use.product-use-step-3 }}
                </div>
              </div>
            </li>
            {% endif %}
            {% if section.settings.step_4 != blank and product.metafields.product-use.product-use-step-4 != blank %}
            <li>
              <div class="grid">
                <div class="grid__item">
                  <span>{{ section.settings.step_4 }}</span>
                </div>
                <div class="grid__item">
                  {{ product.metafields.product-use.product-use-step-4 }}
                </div>
              </div>
            </li>
            {% endif %}
          </ul>
          <p>{{ product.metafields.product-use.product-use-step-text }}</p>
        </div>
      {% endif %}
    </div>
  </div>
  {% if product.metafields.product-use.product-use-precautions-text %}
    <div class="product-precautions">
      <div class="grid flex-grid">
        <div class="grid__item flex-grid__item">
          <h3>{{ section.settings.precautions_title }}</h3>
        </div>
        <div class="grid__item flex-grid__item">
      	  {{ product.metafields.product-use.product-use-precautions-text }}
        </div>
      </div>
    </div>
  {% endif %}
  <div class="product-other-uses">
    <div class="grid">
      <div class="grid__item medium-up--one-quarter">
        <div class="product-other-uses__header">
          <h3>{{ section.settings.other_uses_title }}</h3>
          {{ product.metafields.product-use.product-use-other-text }}
        </div>
      </div>
      <div class="grid__item medium-up--three-quarters">
        <div class="grid flex-grid">
          {% assign nb = product.metafields.product-use.product-use-other-list-title | size %}
          {% for i in (1..nb) %}
          <div class="grid__item medium-up--one-third small--one-half">
            <div class="product-other-use">
              {% assign k = i | minus:1 %}
              <img src="{{ product.metafields.product-use.product-use-other-list-image[k] }}" />
              <h5>{{ product.metafields.product-use.product-use-other-list-title[k] }}</h5>
              {{ product.metafields.product-use.product-use-other-list-text[k] }}
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

