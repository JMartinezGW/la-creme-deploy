  {
    "name": "Utilisation",
    "class": "index-section",
    "settings": [
      {
        "type": "header",
        "content": "Use"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "step_1",
        "label": "Step 1"
      },
      {
        "type": "text",
        "id": "step_2",
        "label": "Step 2"
      },
      {
        "type": "text",
        "id": "step_3",
        "label": "Step 3"
      },
      {
        "type": "text",
        "id": "step_4",
        "label": "Step 4"
      },
      {
        "type": "header",
        "content": "Precautions"
      },
      {
        "type": "text",
        "id": "precautions_title",
        "label": "Title"
      },
      {
        "type": "header",
        "content": "Other uses"
      },
      {
        "type": "text",
        "id": "other_uses_title",
        "label": "Title"
      }
	]
  }
{% endschema %}

