        "label": "Title"
      },
      {
        "type": "text",
        "id": "discount_1_text",
        "label": "Text"
      },
      {
        "type": "header",
        "content": "Discount 2"
      },
      {
        "type": "text",
        "id": "discount_2_title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "discount_2_text",
        "label": "Text"
      },
      {
        "type": "header",
        "content": "Discount 3"
      },
      {
        "type": "text",
        "id": "discount_3_title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "discount_3_text",
        "label": "Text"
      },
	  {
        "type": "checkbox",
        "id": "discountqty_enable",
