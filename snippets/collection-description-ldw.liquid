{% assign tag = current_tags %}
{% if tag == blank %}
  <h2>{{ collection.title }}</h2>
  {% if collection.metafields.collection-info.collection-info-contenance != blank %}
    <div class="rte collection-quantity">
      {{collection.metafields.collection-info.collection-info-contenance}}
    </div>
  {% endif %}
  {% if collection.description != blank %}
    <div class="rte">
      {{ collection.description }}
    </div>
  {% endif %}
{% else %}
  <h2>{{ tag }}</h2>
  {% for item in shop.metafields.product-tag-info.product-tag-info-name %}
    {% if tag contains item %}
      {% assign position = forloop.index0 %}
      {% break %} 
    {% endif %}
  {% endfor %}
  {% if shop.metafields.product-tag-info.product-tag-info-contenance[position] != blank %}
    <div class="rte">
      {{ shop.metafields.product-tag-info.product-tag-info-contenance[position] }}
    </div>
  {% endif %}
  {% if shop.metafields.product-tag-info.product-tag-info-description[position] != blank %}
    <div class="rte">
      {{ shop.metafields.product-tag-info.product-tag-info-description[position] }}
    </div>
  {% endif %}
{% endif %}